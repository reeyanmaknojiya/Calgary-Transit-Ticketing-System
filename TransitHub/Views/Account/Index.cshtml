                    <label for="Email">Email:</label>
                    <label for="Email"><b>john.smith@gmail.com</b></label>
                </div><br /><br />
                <div style="font-size:20px">
                    <label>Phone Number:</label>
                    <label><b>XXXXXXXXXX</b></label>
                </div>
            </div>
        </div>
    </div>

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .content {
        margin-left: 200px;
        padding-left: 20px;
    }

    .form-control {
        width: 100%;
        height: 110px;
    }

    .tab-content {
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        padding: 10px;
    }

    .nav-pills {
        margin-bottom: 0;
        justify-content: center;
    }

    .leftpane {
        width: 33%;
        height: 100%;
        float: left;
    }

    .middlepane {
        width: 33%;
        height: 100%;
        float: left;
    }

    .rightpane {
        width: 33%;
        height: 100%;
        float: right;
    }

    .split {
        height: 100%;
        width: 50%;
        position: fixed;
        z-index: 1;
        top: 0;
        overflow-x: hidden;
        padding-top: 20px;
    }

    .centered {
        text-align: left;
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .centeredHead {
        position: absolute;
        top: 10%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .login-btn {
        color: white;
        background-color: #b83a3f;
        height: 50px;
        width: 100%;
    }

    .forgotpass {
        float: right;
    }

    .title {
        font-size: 2.5rem;
        text-align: center;
        margin-left: 20px;
    }

    .title-container {
        display: flex;
        align-items: center;
        width: 100%;
        max-width: 450px;
        margin: 0 auto;
        vertical-align: middle;
    }

    .back-arrow {
    }

    .input {
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
    }

    .input-box {
        height: 33px;
    }

    .floated {
        float: left;
        margin-right: 5px;
    }

    .centre {
        margin-left: auto;
        margin-right: auto;
    }

    .centre-cell {
        text-align: center;
    }
</style>
