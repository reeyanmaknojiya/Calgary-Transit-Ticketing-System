                                <option>27</option>
                                <option>28</option>
                                <option>29</option>
                                <option>30</option>
                                <option>31</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4" style="margin-bottom:-1rem;">
                        <input type="text" class="form-control input-box" placeholder="Year" value="" />
                    </div>
                </div>
                <div class="input">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control input-box" name="emailInput" value="" />
                </div>
                <div class="input">
                    <label for="">Phone Number</label>
                    <input type="text" class="form-control input-box" name="phoneInput" value="" />
                </div>
                <div class="input">
                    <label for="">Password</label>
                    <input type="password" class="form-control" style="height: 30px;" name="passwordInput" value="" />
                </div>
                <div class="input">
                    <label for="">Confirm Password</label>
                    <input type="password" class="form-control" style="height: 30px;" name="passwordInput" value="" />
                </div>

                <!--Button-->
                <div style="display:flex;justify-content:center;align-items:center;">
                    <button type="button" style="height: 35px;" class="btn btn-danger mb-2 login-btn">Save Changes</button>
                </div>
            </form>
        </div>

        <div id="viewAccount" class="tab-pane fade">
