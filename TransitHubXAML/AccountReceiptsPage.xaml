        <Button Content="View Receipt" HorizontalAlignment="Left" Margin="10,476,0,0" VerticalAlignment="Top" Width="425" Height="50" FontSize="25" Click="Button_Click_1"/>
        <Label Content="Purchase History" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="128,11,0,0" Height="58" Width="233" FontSize="30" FontFamily="Open Sans"/>
        <Rectangle Fill="#B83A3F" Panel.ZIndex="-1" HorizontalAlignment="Left" Height="65" Stroke="{x:Null}" StrokeThickness="0.5" VerticalAlignment="Top" Width="466" Margin="-16,0,0,0"/>
        <Rectangle Fill="#FFACACAC" Stroke="Black" Margin="-22,194,0,605"/>
        <Rectangle Fill="#FFACACAC" Stroke="Black" Margin="-22,370,0,429"/>
        <Rectangle Fill="#FFACACAC" Stroke="Black" Margin="-22,546,0,253"/>

    </Grid>

</Page>
