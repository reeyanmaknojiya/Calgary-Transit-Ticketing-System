                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#FF952D31"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#FF952D31"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
