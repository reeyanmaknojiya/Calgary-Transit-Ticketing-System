<Page x:Class="TransitHubXAML.EditAccountPhonePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TransitHubXAML"
      mc:Ignorable="d" 
      Title="EditAccountPhonePage" Height="800" Width="450">
    <Grid>
        <TextBox x:Name="phoneText" FontSize="24" HorizontalAlignment="Left" Height="42" Margin="58,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332"/>
        <Label Content="Enter Phone Number" HorizontalAlignment="Left" Margin="58,196,0,0" VerticalAlignment="Top" Height="44" Width="224" FontSize="22"/>
        <Image MouseDown="Back_Click" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="64" Source="Resources/back-arrow.png" Margin="30,30,0,0"/>
        <TextBlock FontSize="30" Margin="161,30,106,702.5" Text="Edit Phone"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="227,665,0,0" VerticalAlignment="Top" Width="223" Height="70" FontSize="30" Background="#FFC43A3F" Foreground="White" Click="Button_Click_1"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="4,665,0,0" VerticalAlignment="Top" Width="223" Height="70" FontSize="30" Click="Button_Click"/>

    </Grid>
</Page>
