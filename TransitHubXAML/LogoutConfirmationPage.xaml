<Page x:Class="TransitHubXAML.LogoutConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TransitHubXAML"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="450"
      Title="LogoutConfirmationPage">

    <Grid>
        <Label Content="Are you sure you want to Logout?" HorizontalContentAlignment="Center" FontSize="27" VerticalAlignment="Top" Margin="0,259,3,0" Height="70"/>
        <Button Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Width="180" Margin="31,354,0,0" Height="46" Click="Button_Click"/>
        <Button Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Width="180" Margin="237,354,0,0" Height="46" Click="Button_Click2"/>

    </Grid>
</Page>
