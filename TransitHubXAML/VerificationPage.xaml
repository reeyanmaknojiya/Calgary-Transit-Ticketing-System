        <Label Content="Photo of your Identification" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="70,245,65,0" FontSize ="25" Height="53" Width="315"/>
        <Label Content="or" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="199,374,0,0" FontSize ="25" Height="44" Width="45" RenderTransformOrigin="1.711,0.58"/>
        <TextBox HorizontalAlignment="Left" Height="47" TextWrapping="Wrap" VerticalAlignment="Top" Width="295" Margin="74,154,0,0" FontSize ="25"/>
        <Button Content="  SELECT FILE" HorizontalAlignment="Left" VerticalAlignment="Top" Width="295" FontSize ="25" Margin="74,319,0,0" Height="50"/>
