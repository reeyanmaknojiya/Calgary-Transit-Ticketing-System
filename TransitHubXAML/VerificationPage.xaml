    <Grid>

        <Button Content="Send For Approval" Foreground="white" Background="#B83A3F" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Width="387" Margin="30,537,0,0" Height="58" RenderTransformOrigin="0.498,1.486" Click="Button_Click"/>
